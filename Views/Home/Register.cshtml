@model Application.ViewModel.User.VmRegisterUser

@{
	ViewData["Title"] = "Register";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/home.css" rel="stylesheet" asp-append-version="true" />

<video autoplay muted loop id="background-video">
	<source src="@Url.Content("~/videos/22908-331768732_small.mp4")" type="video/mp4">
</video>
<div class="container centered-container">
	<div class="row d-flex justify-content-center mt-5">
		<div class="col-12 col-md-8 col-lg-6 col-xl-5">
			<div class="card py-3 px-2">
				<div class="division">
					<div class="row">
						<div class="col-12"><span>Register</span></div>
					</div>
				</div> 
				<form method="post" class="myform" id="form-register">
					<div class="form-group">
						<input name="Name" style="color:white !important;" type="text" class="form-control" placeholder="Name" asp-for="Name">
					</div>
					<div class="form-group">
						<input name="Age" style="color:white !important;" type="number" class="form-control" placeholder="Age" asp-for="Age">
					</div>
					<div class="form-group">
						<input name="Email" style="color:white !important;" type="email" class="form-control" placeholder="Email" asp-for="Email">
					</div>
					<div class="form-group">
						<input name="Password" id="password" style="color:white !important;" type="password" class="form-control" placeholder="Password" asp-for="Password">
						<button id="btn-pass" type="button" class="btn-purple" onclick="showPassword();" aria-pressed="false">
							<i style="color: #57557A;" class="fa-solid fa-eye"></i>
						</button>
					</div>
					<div class="row">
						<div class="col-12 bn" onclick="redirectToLogin()">Login here</div>
						<div id="message" class="col-12 warn-message" style="color:green; opacity:70%"></div>
					</div>
					<div class="form-group mt-3">
						<button id="registerButton" type="submit" class="btn btn-block btn-primary btn-"><small>Register</small></button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<script src="~/js/register.js" asp-append-version="true"></script>