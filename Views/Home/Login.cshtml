<link href="~/css/home.css" rel="stylesheet" asp-append-version="true" />
@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<video autoplay muted loop id="background-video">
	<source src="@Url.Content("~/videos/22908-331768732_small.mp4")" type="video/mp4">
</video>
<div class="container centered-container">
	<div class="row d-flex justify-content-center mt-5">
		<div class="col-12 col-md-8 col-lg-6 col-xl-5">
			<div class="card py-3 px-2">
				<div class="division">
					<div class="row">
						<div class="col-12"><span>Login</span></div>
					</div>
				</div> 
				<form class="myform" id="form-login">
					<div class="form-group">
						<input name="Email" style="color:white !important;" type="email" class="form-control" placeholder="Email">
					</div>
					<div class="form-group">
						<input name="Password" id="password" style="color:white !important;" type="password" class="form-control" placeholder="Password">
						<button id="btn-pass" type="button" class="btn-purple" onclick="showPassword();" aria-pressed="false">
							<i style="color: #57557A;" class="fa-solid fa-eye"></i>
						</button>
					</div>
					<div class="row">
						<div class="col-12 bn" onclick="redirectToRegister();">Register here</div>
						<div class="col-12" >If you forgot your password, contact your admin</div>
						<div id="warn-message" class="col-12 warn-message" style="color:red; opacity:70%">Essa conta não está logada</div>
					</div>
					<div class="form-group mt-3">
						<button id ="loginButton" type="submit" class="btn btn-block btn-primary btn-"><small>Login</small></button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<script src="~/js/login.js" asp-append-version="true"></script>